<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.SetmealDishMapper">
    <!--  批量插入套餐-菜品关系数据  -->
    <insert id="insertBatchSetmealDish">
        INSERT INTO setmeal_dish (setmeal_id, dish_id, name, price, copies)
        VALUES
        <foreach collection="dishes" item="item" separator=",">
            (#{item.setmealId}, #{item.dishId}, #{item.name}, #{item.price},
             #{item.copies})
        </foreach>
    </insert>

    <select id="getSetmealIdsByDishIds" resultType="java.lang.Long">
        SELECT setmeal_id FROM setmeal_dish WHERE dish_id IN
        <foreach collection="ids" item="dishId" open="(" close=")" separator=",">
            #{dishId}
        </foreach>
    </select>

    <!--  根据套餐id 查询套餐-菜品关系列表数据  -->
    <select id="listBySetmealId" resultType="com.sky.entity.SetmealDish">
        SELECT * FROM setmeal_dish WHERE setmeal_id = #{id}
    </select>

    <!--根据套餐id 查询 菜品列表数据-->
    <select id="getBySetmealId" resultType="com.sky.entity.Dish">
        SELECT d.* FROM setmeal_dish sd LEFT JOIN dish d ON sd.dish_id = d.id
        WHERE sd.setmeal_id = #{id}
    </select>
</mapper>